/* pages/me/me.wxss */
.baseView {
  position: fixed;
  height: 100%;
  width: 100%;
  display:flex;
  flex-direction:column;
}

.searchView {
  display:flex;
  flex-direction:row;
  background-color: white;
  width: 100%;
  height: 40px;
  align-items:center;/*垂直居中*/
  border-bottom: 1rpx solid #D8D8D8;
}

.tapBarItem {
  width: 100%;
  text-align: center;
  color: #A7A7A7;
  font-size: 14px;
  margin-left: 20px;
  /* margin-right: 20px; */
}

.tapBarItem2 {
  display:flex;
  flex-direction:row;
  width: 100%;
  height: 39px;
  justify-content: center;/*水平居中*/
  align-items: center;
  color: #2D68AA;
  font-size: 14px;
  border-bottom: 1rpx solid #2D68AA;
  margin-left: 20px;
  /* margin-right: 10px; */
}

.tapText1 {
  color: #A7A7A7;
}

.tapText2 {
  color: #2D68AA;
}

.chartView {
  height: 100%;
  width: 100%;
  display:flex;
  flex-direction:column;
  align-items:center;/*垂直居中*/
  justify-content: center;/*水平居中*/
}

.container {
    height: 100%;
    display: flex;
    flex-direction: column;
    box-sizing: border-box;
    -webkit-text-size-adjust:none;
    -webkit-user-select: none;
    font-size: 35rpx;
    color: #333;
    font-family: Helvetica,Arial,"Helvetica Neue","Droid Sans","Microsoft YaHei",sans-serif;
}
.canvas {
    width: 100%;
    height: 250px;
}