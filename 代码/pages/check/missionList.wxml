<view class='baseView'>
  <view class="searchView">
    <image class="searchIcon" src="../../assets/search.png" mode="widthFix"></image>
    <input class='searchInput' placeholder='请输入任务名称'></input>
  </view>
  <view class="noDataView" style="height:{{scrollHeight-85}}px;" wx:if="{{dangerList.length == 0}}">
    <text class='noDataText'>暂无数据</text>
  </view>
  <scroll-view scroll-y="true" class='scrollView' style="height:{{scrollHeight-85}}px;" wx:else>
    <view wx:for="{{missionList}}" class='scrollItem'>
      <view class='dangerView' data-id='{{item.rwid}}' bindtap='jumpMission'>
        <view class='typeView'>
          <image class="dangerIcon" src="../../assets/dangerTypeBG.png" mode="widthFix" wx:if="{{item.sffc == 'true'}}"></image>
          <image class="dangerIcon" src="../../assets/dangerTypeBG2.png" mode="widthFix" wx:else></image>
          <text class='typeText' wx:if="{{item.sffc == 'true'}}">复查</text>
          <text class='typeText' wx:else>初查</text>
        </view>
        <view class='subView'>
          <text class='dangerText'>{{item.rwmc}}</text>
          <text class='subText'>{{item.rwmc}}</text>
        </view>
      </view>
    </view>
  </scroll-view>
</view>

